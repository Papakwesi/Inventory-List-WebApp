@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

<div class="container-fluid auth-hero">
    <div class="row w-100 gx-0 justify-content-center align-items-center">
        <!-- Left: Hero / Marketing (hidden on small screens) -->
        <div class="col-lg-7 hero-left d-none d-lg-block">
            <div class="floating-circle"></div>
            <div class="floating-circle small"></div>

            <div class="app-logo d-flex align-items-center mb-5">
                <div class="app-logo-icon me-3">
                    <i class="fas fa-box"></i>
                </div>
                <div class="app-logo-text">
                    <span class="brand-main">Inventory</span>
                    <span class="brand-sub">Manager</span>
                </div>
            </div>


            <h1 class="fw-bold">Inventory made <span class="text-white">simple</span> and <span class="text-white">powerful</span></h1>
            <p class="lead">Track stock, manage suppliers, and get actionable insights — all in one place. Fast onboarding, secure roles, and beautiful reports.</p>

            <div class="mb-4">
                <div class="feature">
                    <div class="fa-stack"><i class="fas fa-cubes"></i></div>
                    <div>
                        <span>Product Management</span><br />
                        <small class="text-white-50">Add, edit, and categorize products</small>
                    </div>
                </div>

                <div class="feature">
                    <div class="fa-stack"><i class="fas fa-chart-line"></i></div>
                    <div>
                        <span>Realtime Insights</span><br />
                        <small class="text-white-50">Charts and reorder alerts</small>
                    </div>
                </div>

                <div class="feature">
                    <div class="fa-stack"><i class="fas fa-user-shield"></i></div>
                    <div>
                        <span>Role Based Access</span><br />
                        <small class="text-white-50">Secure Admin & Employee roles</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right: Login card -->
        <div class="col-lg-5 d-flex align-items-center justify-content-center p-4">
            <div class="auth-card card shadow border-0 rounded-4">
                <div class="card-body p-5">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <i class="fas fa-lock fa-2x text-primary mb-3"></i>
                        <h3 class="fw-bold mb-1">Sign in</h3>
                        <p class="text-muted small">Access your Inventory account</p>
                    </div>

                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                        <!-- Email -->
                        <div class="mb-3">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email address" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Password with toggle -->
                        <div class="mb-3 position-relative">
                            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" id="pwdInput" />
                            <button type="button" id="togglePwd" class="btn btn-sm btn-outline-secondary position-absolute toggle-btn">
                                <i class="fas fa-eye"></i>
                            </button>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <!-- Remember + Forgot -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label small" asp-for="Input.RememberMe"></label>
                            </div>
                            <a asp-page="./ForgotPassword" class="small text-primary">Forgot password?</a>
                        </div>

                        <!-- Login Button -->
                        <button type="submit" class="btn btn-primary w-100 shadow-sm mb-3">
                            <i class="fas fa-sign-in-alt me-1"></i> Login
                        </button>

                        <!-- External Logins -->
                        @if (Model.ExternalLogins?.Count > 0)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">Or continue with</small>
                                <div class="mt-2">
                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        <a asp-page="./ExternalLogin" asp-route-provider="@provider.Name"
                                           class="btn btn-outline-secondary btn-sm me-1">
                                            @provider.DisplayName
                                        </a>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Sign up -->
                        <div class="text-center mt-4 small text-muted">
                            Don’t have an account? <a asp-area="Identity" asp-page="/Account/Register" class="text-primary">Sign up</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Toggle password show/hide
        (function () {
            const btn = document.getElementById('togglePwd');
            const input = document.getElementById('pwdInput');
            if (!btn || !input) return;
            btn.addEventListener('click', function () {
                const icon = btn.querySelector('i');
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        })();
    </script>
}
