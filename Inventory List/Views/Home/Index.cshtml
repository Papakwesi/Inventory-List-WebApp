@using Newtonsoft.Json

@model Inventory_List.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 fw-bold text-primary">
        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
    </h1>

    <!-- Stat Cards -->
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 rounded-lg h-100 stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted text-uppercase small">Categories</div>
                        <div class="h4 fw-bold">@Model.TotalCategories</div>
                    </div>
                    <div class="icon-circle bg-primary text-white">
                        <i class="fas fa-tags"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 rounded-lg h-100 stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted text-uppercase small">Products</div>
                        <div class="h4 fw-bold">@Model.TotalProducts</div>
                    </div>
                    <div class="icon-circle bg-success text-white">
                        <i class="fas fa-cube"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 rounded-lg h-100 stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted text-uppercase small">Suppliers</div>
                        <div class="h4 fw-bold">@Model.TotalSuppliers</div>
                    </div>
                    <div class="icon-circle bg-info text-white">
                        <i class="fas fa-truck"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 rounded-lg h-100 stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted text-uppercase small">Customers</div>
                        <div class="h4 fw-bold">@Model.TotalCustomers</div>
                    </div>
                    <div class="icon-circle bg-warning text-white">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions -->
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 rounded-lg h-100 stat-card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted text-uppercase small">Transactions</div>
                        <div class="h4 fw-bold">@Model.TotalTransactions</div>
                    </div>
                    <div class="icon-circle bg-dark text-white">
                        <i class="fas fa-exchange-alt"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reorder Alerts -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 rounded-lg h-100 bg-light-danger">
                <a asp-controller="ReorderLevel" asp-action="Index" class="text-decoration-none text-dark">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small fw-bold text-danger">Reorder Alerts</div>
                            <div class="h4 fw-bold">@Model.ReorderCount</div>
                        </div>
                        <div class="icon-circle bg-danger text-white">
                            <i class="fas fa-bell"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-3 mb-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header bg-light fw-bold">
                    <i class="fas fa-link me-2"></i> Quick Actions
                </div>
                <div class="card-body">
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary btn-sm me-2">
                        <i class="fas fa-plus"></i> Add Product
                    </a>
                    <a asp-controller="Customer" asp-action="Index" class="btn btn-info btn-sm me-2">
                        <i class="fas fa-users"></i> View Customers
                    </a>
                    <a asp-controller="Supplier" asp-action="Index" class="btn btn-success btn-sm me-2">
                        <i class="fas fa-truck"></i> View Suppliers
                    </a>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-warning btn-sm">
                        <i class="fas fa-tags"></i> Manage Categories
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Low Stock Products -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header bg-danger text-white fw-bold">
                    <i class="fas fa-bell me-2"></i> Products Below Reorder Level
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Product</th>
                                <th>Stock</th>
                                <th>Reorder Level</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.LowStockProducts != null && Model.LowStockProducts.Any())
                            {
                                foreach (var item in Model.LowStockProducts.Take(5))
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td><span class="badge bg-info text-dark">@item.Quantity</span></td>
                                        <td><span class="badge bg-danger">@item.ReorderLevel</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-3">
                                        <i class="fas fa-check-circle text-success"></i> All products are above reorder levels 🎉
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.LowStockProducts != null && Model.LowStockProducts.Count() > 5)
                    {
                        <div class="text-center py-2">
                            <a href="@Url.Action("ReorderLevels", "Product")" class="btn btn-outline-danger btn-sm">
                                View All <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 18px;
    }

    .bg-light-danger {
        background: #ffe6e6;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        transition: all 0.2s ease-in-out;
    }
</style>
