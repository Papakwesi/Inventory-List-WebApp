@model Inventory_List.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-users text-primary me-2"></i> Edit Customer
    </h1>
    <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
    </a>
</div>

<!-- Edit Customer Form Card -->
<div class="card shadow-lg border-0 rounded-3">
    <div class="card-header bg-gradient-primary text-white py-3">
        <h6 class="m-0 fw-bold"><i class="fas fa-edit me-2"></i> Update Customer Information</h6>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />

            <div class="row g-4">
                <!-- Customer Name -->
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Stark Industries" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!-- Contact Info -->
            <hr class="my-4" />
            <h6 class="text-primary fw-bold mb-3"><i class="fas fa-address-book me-2"></i> Contact Details</h6>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-user-tie"></i></span>
                        <input asp-for="ContactInfo" class="form-control" placeholder="e.g. +233 24 123 4567 or customer@email.com" />
                    </div>
                    <span asp-validation-for="ContactInfo" class="text-danger"></span>
                </div>
            </div>

            <!-- Address Info -->
            <hr class="my-4" />
            <h6 class="text-primary fw-bold mb-3"><i class="fas fa-map-marked-alt me-2"></i> Address Information</h6>
            <div class="row g-4">
                <div class="col-md-12">
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-map-marker-alt"></i></span>
                        <input asp-for="Address" class="form-control" placeholder="123 Avengers Tower" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-end mt-5">
                <button type="submit" class="btn btn-success me-2 shadow-sm">
                    <i class="fas fa-save me-1"></i> Update Customer
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary shadow-sm ml-3">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Bootstrap validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
