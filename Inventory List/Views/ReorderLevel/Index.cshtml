@model IEnumerable<Inventory_List.Models.ReorderLevel>

@{
    ViewData["Title"] = "Reorder Levels";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-exclamation-triangle text-danger"></i> Reorder Levels
    </h1>
    <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Add Reorder Level
    </a>
</div>

<!-- Reorder Levels Table -->
<div class="card shadow mb-4">
    <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold"><i class="fas fa-clipboard-list me-2"></i> Reorder Monitoring</h6>
        <small class="text-light">Track products nearing stock-out</small>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatable" class="table table-hover table-striped align-middle">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Product</th>
                        <th>Current Stock</th>
                        <th>Reorder Level</th>
                        <th>Status</th>
                        <th class="text-center"><i class="fas fa-cogs"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var lowStock = item.Product?.Quantity <= item.Level;

                        <tr>
                            <td>
                                <i class="fas fa-box text-secondary me-2"></i>
                                <strong>@item.Product?.Name</strong>
                            </td>
                            <td>
                                <span class="badge bg-info text-dark px-3 py-2">
                                    @item.Product?.Quantity
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-secondary text-white px-3 py-2">
                                    @item.Level
                                </span>
                            </td>
                            <td>
                                @if (lowStock)
                                {
                                    <span class="badge bg-danger px-3 py-2">
                                        <i class="fas fa-exclamation-circle me-1"></i> Needs Reorder
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success px-3 py-2">
                                        <i class="fas fa-check-circle me-1"></i> OK
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger ms-2 ml-3"
                                                onclick="return confirm('Are you sure you want to delete this reorder level?');"
                                                title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatables.js"></script>
}
