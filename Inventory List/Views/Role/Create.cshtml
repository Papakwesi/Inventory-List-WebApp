@model Inventory_List.Models.ViewModels.RoleVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Role</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="row g-3">

                        <!-- Role Name -->
                        <div class="col-md-6 form-floating">
                            <input asp-for="Name" class="form-control" placeholder="Role Name" />
                            <label asp-for="Name"></label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Actions -->
                        <div class="col-12 d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 me-2 shadow-sm">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-5 fw-semibold shadow-sm">
                                Save Role
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
