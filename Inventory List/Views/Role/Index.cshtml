@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2 class="section-title">Roles</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Role</a>
</p>
<table id="datatables" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td class="text-nowrap">
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-primary me-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>

                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline delete-form">
                        <button type="submit" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="~/js/datatables.js"></script>
    <script src="~/js/sweetalerts.js"></script>
    </script>
}
