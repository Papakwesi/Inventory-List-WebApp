@model IEnumerable<Inventory_List.ViewModels.UserVM>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <!-- Header -->
        <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-users-cog me-2"></i> Manage Users</h4>
            <a asp-action="Create" class="btn btn-light btn-sm shadow-sm">
                <i class="fas fa-user-plus me-1"></i> Create User
            </a>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i> No users found. Click <b>Create User</b> to add one.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table id="datatable" class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr class="text-uppercase small text-muted">
                                <th><i class="fas fa-envelope me-2"></i> Email</th>
                                <th><i class="fas fa-user-tag me-2"></i> Roles</th>
                                <th class="text-center"><i class="fas fa-cogs me-2"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <!-- Email -->
                                    <td>
                                        <i class="fas fa-envelope text-muted me-2"></i> @user.Email
                                    </td>

                                    <!-- Roles -->
                                    <td>
                                        @if (user.Roles.Any())
                                        {
                                            @foreach (var role in user.Roles)
                                            {
                                                <span class="badge bg-light me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted">No Role</span>
                                        }
                                    </td>

                                    <!-- Actions -->
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@user.Id"
                                               class="btn btn-sm btn-outline-primary rounded-pill me-1" title="Edit User">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                <button type="submit"
                                                        class="btn btn-sm btn-outline-danger rounded-pill me-1 ml-2" title="Delete User">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>

                                            <a asp-action="ResetPassword" asp-route-id="@user.Id"
                                               class="btn btn-sm btn-outline-warning rounded-pill ml-2" title="Reset Password">
                                                <i class="fas fa-key"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatables.js"></script>
}