@model IEnumerable<Inventory_List.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-boxes text-primary"></i> Products</h1>
    <a asp-action="Create" class="btn btn-primary btn-sm shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Add New Product
    </a>
</div>

<!-- Products Table -->
<div class="card shadow mb-4">
    <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold"><i class="fas fa-list me-2"></i> Product List</h6>
        <small class="text-light">Manage your inventory products</small>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatable" class="table table-hover table-striped align-middle">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Code)</th>
                        <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                        <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
                        <th>Category</th>
                        <th class="text-center"><i class="fas fa-cogs"></i></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fas fa-box text-secondary me-2"></i> @item.Name
                            </td>
                            <td>@item.Code</td>
                            <td>
                                <span class="badge bg-info text-dark px-3 py-2">
                                    @item.Quantity
                                </span>
                            </td>
                            <td>
                                <span class="text-success fw-bold">GHS @item.UnitPrice.ToString("F2")</span>
                            </td>
                            <td>@item.Category?.Name</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @* Details button commented out *@
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline ml-3">
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger ms-2"
                                                onclick="return confirm('Are you sure you want to delete this product?');"
                                                title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatables.js"></script>
}
