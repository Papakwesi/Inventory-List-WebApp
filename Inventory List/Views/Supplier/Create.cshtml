@model Inventory_List.Models.Supplier

@{
    ViewData["Title"] = "Create Supplier";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-industry text-primary"></i> Add Supplier
    </h1>
    <a asp-action="Index" class="btn btn-secondary btn-sm shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to List
    </a>
</div>

<!-- Card Form -->
<div class="card shadow-lg border-0">
    <div class="card-header bg-gradient-primary text-white py-3">
        <h6 class="m-0 font-weight-bold"><i class="fas fa-user-plus"></i> Supplier Information</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div class="row g-3">
                <!-- Supplier Name -->
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-bold mt-3"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-building"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="e.g. Stark Industries" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Supplier Email -->
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-bold mt-3"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="e.g. StarkIndustries@gmail.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Contact Person -->
                <div class="col-md-6">
                    <label asp-for="ContactPerson" class="form-label fw-bold mt-3"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-user-tie"></i></span>
                        <input asp-for="ContactPerson" class="form-control" placeholder="e.g. Pepper Potts" />
                    </div>
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </div>

                <!-- Phone Number -->
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label fw-bold mt-3"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-phone-alt"></i></span>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="+233 123 456 789" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Home Address -->
                <div class="col-md-6">
                    <label asp-for="HomeAddress" class="form-label fw-bold mt-3"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-map-marker-alt"></i></span>
                        <input asp-for="HomeAddress" class="form-control" placeholder="123 Avengers Tower" />
                    </div>
                    <span asp-validation-for="HomeAddress" class="text-danger"></span>
                </div>

                <!-- City -->
                <div class="col-md-4">
                    <label asp-for="City" class="form-label fw-bold mt-3"></label>
                    <input asp-for="City" class="form-control" placeholder="Accra" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <!-- Region -->
                <div class="col-md-4">
                    <label asp-for="Region" class="form-label fw-bold mt-3"></label>
                    <input asp-for="Region" class="form-control" placeholder="Greater Accra" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>

                <!-- Postal Code -->
                <div class="col-md-4">
                    <label asp-for="PostalCode" class="form-label fw-bold mt-3"></label>
                    <input asp-for="PostalCode" class="form-control" placeholder="00233" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>

                <!-- Country -->
                <div class="col-md-6">
                    <label asp-for="Country" class="form-label fw-bold mt-3"></label>
                    <input asp-for="Country" class="form-control" placeholder="Ghana" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary me-2 shadow-sm">
                    <i class="fas fa-save"></i> Save Supplier
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary shadow-sm ml-3">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Optional: Bootstrap validation styling
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
