@model IEnumerable<Inventory_List.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold">Transactions</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Record Transaction
    </a>
</div>

<table id="datatables" class="table table-striped table-hover shadow-sm rounded">
    <thead class="table-dark">
        <tr>
            <th>Product</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Processed By</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>
                    <span class="badge
                            @(item.Type == "Purchase" ? "bg-success" :
                                                    item.Type == "Sale" ? "bg-danger" :
                                                    item.Type == "Return" ? "bg-info" : "bg-warning")">
                    @item.Type
                </span>
            </td>
            <td>@item.Quantity</td>
            <td>@item.Date.ToString("dd-MMM-yyyy HH:mm")</td>
            @* <td>@item.User?.UserName</td> *@
            <td>@item.UserId</td>            ...
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                    <i class="fas fa-edit"></i>
                </a>

                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                      onsubmit="return confirm('Are you sure you want to delete this transaction?');">
                    <button type="submit" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </form>
            </td>

        </tr>
                }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#datatables').DataTable({
                "pageLength": 10,
                "ordering": true,
                "lengthChange": true,
                "searching": true
            });
        });
    </script>
}
