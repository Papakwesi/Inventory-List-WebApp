@model IEnumerable<Inventory_List.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold">Transactions</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Record Transaction
    </a>
</div>

<table class="table table-striped table-hover shadow-sm rounded">
    <thead class="table-dark">
        <tr>
            <th>Product</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Date</th>
            <th>Processed By</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>
                    <span class="badge
                            @(item.Type == "Purchase" ? "bg-success" :
                                                    item.Type == "Sale" ? "bg-danger" :
                                                    item.Type == "Return" ? "bg-info" : "bg-warning")">
                    @item.Type
                </span>
            </td>
            <td>@item.Quantity</td>
            <td>@item.Date.ToString("dd-MMM-yyyy HH:mm")</td>
            <td>@item.User?.UserName</td>
        </tr>
                }
    </tbody>
</table>
