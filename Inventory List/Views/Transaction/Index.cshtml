@model IEnumerable<Inventory_List.Models.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary mb-0">
        <i class="fas fa-exchange-alt me-2"></i> Transactions
    </h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus-circle me-1"></i> Record Transaction
    </a>
</div>

<div class="card shadow-sm rounded-3 border-0">
    <div class="card-body">
        <table id="datatable" class="table table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th>Product</th>
                    <th>Type</th>
                    <th>Quantity</th>
                    <th>Date</th>
                    <th>Processed By</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.Product?.Name</td>
                        <td>
                            <span class="badge px-3 py-2
                                    @(item.Type == "Purchase" ? "bg-success" :
                                                                    item.Type == "Sale" ? "bg-danger" :
                                                                    item.Type == "Return" ? "bg-info text-dark" : "bg-warning text-dark")">
                            @item.Type
                        </span>
                    </td>
                    <td>@item.Quantity</td>
                    <td>@item.Date.ToString("dd-MMM-yyyy HH:mm")</td>
                    <td>
                        <span class="text-muted fst-italic">
                            @item.User?.Email
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-sm btn-outline-warning me-1" title="Edit">
                            <i class="fas fa-edit"></i>
                        </a>

                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this transaction?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatables.js"></script>
}
