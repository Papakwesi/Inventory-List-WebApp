@model Inventory_List.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Edit Record Transaction";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
        <i class="fas fa-edit me-2"></i> Edit Transaction
    </h2>
    <a asp-action="Index" class="btn btn-outline-primary shadow-sm rounded-pill px-3">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</div>

<div class="card shadow-lg border-0 rounded-3">
    <div class="card-header bg-gradient-primary text-white fw-bold">
        <i class="fas fa-info-circle me-2"></i> Transaction Details
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />

            <!-- Product -->
            <div class="form-group mb-3">
                <label asp-for="ProductId" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-box"></i></span>
                    <select asp-for="ProductId" asp-items="Model.Products" class="form-control">
                        <option value="">-- Select Product --</option>
                    </select>
                </div>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <!-- Transaction Type -->
            <div class="form-group mb-3">
                <label asp-for="Type" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-random"></i></span>
                    <select asp-for="Type" asp-items="Model.Types" class="form-control">
                        <option value="">-- Select Transaction Type --</option>
                    </select>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <!-- Quantity -->
            <div class="form-group mb-3">
                <label asp-for="Quantity" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-sort-numeric-up"></i></span>
                    <input asp-for="Quantity" class="form-control" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Date -->
            <div class="form-group mb-3">
                <label asp-for="Date" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-calendar-alt"></i></span>
                    <input asp-for="Date" type="date" class="form-control" />
                </div>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- User -->
            <div class="form-group mb-3">
                <label asp-for="UserId" class="form-label fw-semibold"></label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                    <input asp-for="UserId" class="form-control" />
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-success shadow-sm me-2">
                    <i class="fas fa-save me-1"></i> Update
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary shadow-sm ml-3">
                    <i class="fas fa-times me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
